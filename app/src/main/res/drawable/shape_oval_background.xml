<?xml version="1.0" encoding="utf-8"?>
<!-- 類型 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!--漸層顏色
    <gradient
        android:startColor="#18506C"
        android:endColor="#000000"
        android:gradientRadius="150dp"
        android:type="radial" />
        -->
    <solid android:color="#FFFFFF" />

    <!-- 文字與邊框的間距  -->
    <padding
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"
        android:left="2dp"/>

    <!-- 形狀大小 -->
    <size
        android:width="50dp"
        android:height="50dp" />

    <!-- 邊框線 -->
    <stroke
        android:width="1dp"
        android:color="@android:color/black" />
</shape>